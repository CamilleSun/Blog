<%-include("partials/header");-%>

<h1>Home</h1>
<p><%=homeStartingContent%></p>

<% posts.forEach(function(post){%>

  <div class="row">
    <div class="col-lg-9">
      <h1><%=post.title%></h1>
      <p>
        <%=post.content.substring(0, 120) + "... "%>
      </p>
    </div>
    <div class="col-lg-3" style="padding-top: 5%;">
      <form class="" action="/option" method="post">
        <button class="btn btn-read" type="submit" name="read" value="<%=post._id%>">Read More</button>
        <button class="btn btn-delete" type="submit" name="delete" value="<%=post._id%>">Delete</button>
      </form>
    </div>
  </div>

<% })%>

<%-include("partials/footer");-%>
